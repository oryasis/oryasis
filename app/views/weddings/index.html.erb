<p id="notice"><%= notice %></p>

<h1>Listing Weddings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Bride name</th>
      <th>Groom name</th>
      <th>Wedding date</th>
      <th>Wedding location</th>
      <th>Title</th>
      <th>Description</th>
      <th>Story</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weddings.each do |wedding| %>
      <tr>
        <td><%= wedding.bride_name %></td>
        <td><%= wedding.groom_name %></td>
        <td><%= wedding.wedding_date %></td>
        <td><%= wedding.wedding_location %></td>
        <td><%= wedding.title %></td>
        <td><%= wedding.description %></td>
        <td><%= wedding.story %></td>
        <td><%= link_to 'Show', wedding %></td>
        <td><%= link_to 'Edit', edit_wedding_path(wedding) %></td>
        <td><%= link_to 'Destroy', wedding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

